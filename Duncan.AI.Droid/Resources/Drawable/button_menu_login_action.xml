<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/civicsmart_gray_light" />
      <stroke
          android:width="1dp"
          android:color="@color/civicsmart_black" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="50dp"
          android:top="10dp"
          android:right="50dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
		<solid
		  android:color="@color/civicsmart_gray" />
      <stroke
          android:width="1dp"
          android:color="@color/civicsmart_black" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="50dp"
          android:top="10dp"
          android:right="50dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>