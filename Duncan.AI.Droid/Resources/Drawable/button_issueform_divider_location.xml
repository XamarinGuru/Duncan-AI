<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
			<item>
				<shape>
					<solid
						android:color="@color/civicsmart_white" />
					<stroke
						android:width="1dp"
						android:color="@color/civicsmart_white" />
					<corners
						android:radius="0dp" />
					<padding
						android:left="5dp"
						android:top="5dp"
						android:right="5dp"
						android:bottom="5dp" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
			<item>
				<shape>
					<solid
						android:color="@color/neutral_orange" />
					<stroke
						android:width="1dp"
						android:color="@color/neutral_orange" />
					<corners
				android:radius="0dp" />
			<padding
				android:left="5dp"
				android:top="5dp"
				android:right="5dp"
				android:bottom="5dp" />
		</shape>
	</item>
	<item>
		<bitmap android:src="@drawable/ic_near_me_black_36dp"
		  android:gravity="right" />
	</item>
	</layer-list>
	</item>
</selector>	

	
		
